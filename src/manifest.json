{
  "name": "Bowery Comp Tool",
  "background_page": "background.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "bowery_icon.png"
  },
  "content_scripts": [
   { "matches": ["https://streeteasy.com/*" ],
    "css": ["widget.css" ]}
  ],
  "permissions": [
    "storage",
    "activeTab",
    "history",
    "tabs",
    "http://*/*",
    "https://*/*",
    "file:///*/*",
    "chrome://favicon/*",
    "sessions",
    "webNavigation"
  ],
  "web_accessible_resources": ["widget.css"],
  "icons": {
    "128": "bowery_icon.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}